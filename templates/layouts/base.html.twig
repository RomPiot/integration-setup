<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{{ title }}{% endblock %}</title>
    <script type="text/javascript" src="{{ assets('build/app.js') }}"></script>
    <link rel="stylesheet" href="{{ assets('build/app.css') }}">
</head>

<body id="{% block body_id %}{% endblock %}">

<header>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#"><img src="{{ app.logo.url }}" alt="logo" class="logo"></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarNavAltMarkup"
                                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                            <div class="navbar-nav">
                                {% for route in app.getNav() %}
                                    <a class="nav-link {% if route.url == app.request.uri %}active{% endif %}"
                                       aria-current="page"
                                       href="{{ path(route.name) }}">{{ route.name }}</a>
                                {% endfor %}
                                {# <a class="nav-link {% if absolute_path('home') == app.request.uri %}active{% endif %}" aria-current="page" href="{{ path('home') }}">Home</a> #}
                                {# <a class="nav-link {% if absolute_path('test') == app.request.uri %}active{% endif %}" href="{{ path('test') }}">Test</a> #}
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
{% block content %}{% endblock %}
</body>
</html>
